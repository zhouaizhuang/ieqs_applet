        data-item="{{item}}"
      >
        {{item.name}}
      </view>
      <view wx:for="[1,2,3,4,5,6]" wx:key="unique" class='w22 nowrap h0' />
    </view>
    -->
    <view class='fs32r b mb30r' style="margin-top:40rpx;">
      是否需要同时查看真伪：<switch style="transform:scale(0.8);" bindchange="switchChange"/>
    </view>
